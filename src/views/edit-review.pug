extends layout 

block main 

  //- p Review for:
  //-     a(href=`/movies/${review.movie_id}`)= review.movie_title

  form(action=`/reviews/update/${id}` method="post")
    dl
      dt
        label(for="reviewer") Edit your name:
      dd
        input(type="text"
              id="reviewer"
              name="reviewer"
              value=reviewer)
      dt
        label(for="grade") Edit your grade:
      dd
        input(type="text"
              id="grade"
              name="grade"
              value=grade)
      dt
        label(for="comments") Edit your comments:
      dd
        textarea(id="comments" name='comments', rows='6', cols='80') 

      
    fieldset.actions
      input(type="submit" value="Update Review")
      input(type='reset', value='Clear Form')
