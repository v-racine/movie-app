extends layout 

block main 
  if oops != undefined 
    p Sorry, something broke! Please try again 

  form(action=`/reviews/update/${id}` method="post")
    dl
      dt
        label(for="reviewer") Edit your name:
      dd
        input(type="text"
              id="reviewer"
              name="reviewer"
              placeholder="name"
              value=reviewer)
      dt
        label(for="grade") Edit your grade:
      dd
        select(name='grade')
          option(value='', disabled='', selected='') Choose one
          option(value='A+') A+
          option(value='A') A
          option(value='A-') A-
          option(value='B+') B+
          option(value='B') B
          option(value='B-') B-
          option(value='C+') C+
          option(value='C') C
          option(value='C-') C-
          option(value='D') D
          option(value='F') F
      dt
        label(for="comments") Edit your comments:
      dd
        textarea#comments(name='comments', rows='6', cols='80', placeholder='type your comments here')

      
    fieldset.actions
      input(type="submit" value="Update Review")
      input(type="reset", value="Clear Form")

block footer
