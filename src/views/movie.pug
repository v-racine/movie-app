extends layout 

block main 
  p Here is your selected movie:

  table
    tbody
      tr
        td 
          b Title: 
          | #{movie.movie_title}
      tr
        td 
          b Year: 
          | #{movie.movie_year}
      tr
        td 
          b Run-Time: 
          | #{movie.run_time} minutes

    form(action=`/movies/${movie.id}/reviews` method="get")
      button See Reviews  

  footer  
    form(action=`/movies/update/${movie.id}` method="get")
      button Edit Movie  
    form(action=`/movies/delete/${movie.id}` method="post")
      button(type="submit") Delete Movie