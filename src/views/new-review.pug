extends layout 

block main 
  if err != undefined 
    p #{err}

  form(action="/reviews/create" method="post")
    dl
      dt
        label(for="title") Enter the title of a new movie:
      dd
        input(type="text"
              id="title"
              name="title"
              placeholder="title"
              value=title)
      dt
        label(for="reviewer") Enter your name:
      dd
        input(type="text"
              id="reviewer"
              name="reviewer"
              placeholder="name"
              value=reviewer)
      dt
        label(for="grade") Enter your grade:
      dd
        select(name='grade')
          option(value='', disabled='', selected='') Choose one
          option(value='A+') A+
          option(value='A') A
          option(value='A-') A-
          option(value='B+') B+
          option(value='B') B
          option(value='B-') B-
          option(value='C+') C+
          option(value='C') C
          option(value='C-') C-
          option(value='D') D
          option(value='F') F
        //- input(type="text"
        //-       id="grade"
        //-       name="grade"
        //-       placeholder="e.g. A+, A, A-, B+, etc."
        //-       value=grade)
      dt
        label(for="comments") What did you think of the movie?
      dd
        textarea#comments(name='comments', rows='6', cols='80', placeholder='type your comments here')

          
    fieldset.actions
      input(type="submit" value="Submit Review")
      input(type="reset", value="Clear Form")
    
    block footer


      
